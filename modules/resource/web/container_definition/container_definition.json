[
    {
        "name": "${project}-${env}-${service}-container",
        "image": "${ecr_repository_url}",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "ap-northeast-1",
              "awslogs-stream-prefix": "${service}",
              "awslogs-group": "/ecs/${project}/${env}/${service}"
            }
          },
        "mountPoints": []
    }
]